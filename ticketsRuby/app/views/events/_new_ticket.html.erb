<div class="container">
  <%= form_with(model: ticket, local: true) do |form| %>
    <% if ticket.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>
        <ul>
          <% ticket.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="field">
      <%= form.label :name, style: 'margin-right: 56px;' %>
      <%= form.text_field :name, id: :ticket_name %>
    </div>
    <div class="field">
      <%= form.label :seat_id_seq, style: 'margin-right: 21px;' %>
      <%= form.text_field :seat_id_seq, id: :ticket_seat_id_seq %>
    </div>
    <div class="field">
      <%= form.label :address, style: 'margin-right: 41px;' %>
      <%= form.text_area :address, id: :ticket_address %>
    </div>
    <div class="field">
      <%= form.label :price, style: 'margin-right: 63px;' %>
      <%= form.text_field :price, id: :ticket_price %>
    </div>
    <div class="field">
      <%= form.label :email_address, style: 'margin-right: 3px;' %>
      <%= form.text_field :email_address, id: :ticket_email_address %>
    </div>
    <div class="field">
      <%= form.label :phone, style: 'margin-right: 55px;' %>
      <%= form.text_field :phone, id: :ticket_phone %>
    </div>
    <%= form.hidden_field :event_id %>
    <%= form.hidden_field :user_id %>
    <hr>
    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
</div>
